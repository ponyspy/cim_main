extends ../layout

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/event.css')

block content_scripts
	script(type='text/javascript', src='/scripts/main.js')
	//- script(type='text/javascript', src='/scripts/masonry.pkgd.min.js')

block content_right

block content
	img(src=event[0].photo)
	.calendar
		.date cool
		each date in schedule
			- var days = ['вс','пн','вт','ср','чт','пт','сб'];
			- var d = date.date.getDate()
			if (d < 10)
				- d = '0' + d
			.date2= days[date.date.getDay()] + '.' + d
	h1= event[0].ru.title
	if (event[0].ru.s_title)
		h2= event[0].ru.s_title
	p.description
		!= event[0].ru.body