extends ../layout

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/news.css')

block content_scripts
	script(type='text/javascript', src='/scripts/main.js')
	script(type='text/javascript', src='/scripts/masonry.pkgd.min.js')

block content_right

block content
	if (news.photo)
		img(src=news.photo)
	.title= news.ru.title.toUpperCase()
	if (news.ru.s_title)
		.s_title= news.ru.s_title.toUpperCase()
	.description(lang='ru')
		!= news.ru.body