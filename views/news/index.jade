extends ../layout

block title
	title= news.ru.title.toUpperCase()

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/content.css')

block content_scripts
	script(type='text/javascript', src='/scripts/back.js')

block content_right
	//- .event_block
		.event
			.t MP3.РАВЕЛЬ
			.s_t ХОРЕОГРАФИЧЕСКАЯ ИСТОРИЯ НА МУЗЫКУ «БОЛЕРО» МОРИСА РАВЕЛЯ
		.event
			.t ПОЛОСАТЫЙ
			.s_t СКАЗКА С ОРКЕСТРОМ. СПЕКТАКЛЬ ДЛЯ ВСЕЙ СЕМЬИ

block content
	if (news.photo)
		img(src=news.photo)
	.title= news.ru.title.toUpperCase()
	if (news.ru.s_title)
		.s_title= news.ru.s_title.toUpperCase()
	.description(lang='ru')
		!= news.ru.body