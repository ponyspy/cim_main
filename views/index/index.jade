block content_right
	.tag_navigator tags
		br
		b.tag_item.one One
		br
		b.tag_item.two Two

block content
	.main_poster_block
		.main_poster_img
		.main_poster_cal
			.cal_ticket ticket
			.cal_date date
			.cal_time_hall time/hall
			.cal_title title
	.infinite-container
		each item in news
			.infinite-item
				a.item_link(href='/news/' + item._id)
					.item_title #{item.ru.title.toUpperCase()}
					.item_date
						- var date = item.date.getDate()
						- var month = item.date.getMonth()
						if (date < 10)
							- date = '0' + date
						if (month < 10)
							- month = '0' + month
						p= date
						p= '.'
						p= month
					if (item.poster)
						img.item_img(src=item.poster)
					else
						.item_body
							!= item.ru.body.substr(0,240)
